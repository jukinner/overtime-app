
<% if flash[:alert] %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Alert", sticky: false, time: 5000, image: :notice) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Error", sticky: false, time: 5000, image: :notice) %>
<% else flash[:aler] %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, time: 5000, image: :notice) %>
<% end %>